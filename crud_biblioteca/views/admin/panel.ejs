<!-- Contenido Principal del Panel -->
<div class="container-fluid px-4 py-4">
    <!-- Encabezado del Panel -->
    <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
            <h2 class="text-verde-oscuro mb-0"><i class="bi bi-speedometer2 me-2"></i>Panel Principal</h2>
            <p class="text-muted">Bienvenido al panel de administración</p>
        </div>
    </div>
    
    <!-- Estadísticas en tarjetas -->
    <div class="row g-4 mb-4">
        <div class="col-md-6">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="icon-circle bg-verde-claro me-3">
                            <i class="bi bi-book text-verde-oscuro"></i>
                        </div>
                        <h5 class="card-title mb-0">Total de Libros</h5>
                    </div>
                    <p class="card-text display-4 mb-3"><%= totalLibros %></p>
                    <a href="/admin/libros" class="btn btn-outline-success">
                        <i class="bi bi-arrow-right me-2"></i>Gestionar Libros
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="icon-circle bg-verde-claro me-3">
                            <i class="bi bi-person-lines-fill text-verde-oscuro"></i>
                        </div>
                        <h5 class="card-title mb-0">Total de Préstamos</h5>
                    </div>
                    <p class="card-text display-4 mb-3"><%= totalPrestamos %></p>
                    <a href="/admin/prestamos" class="btn btn-outline-success">
                        <i class="bi bi-arrow-right me-2"></i>Gestionar Préstamos
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Libros Recientes -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4 class="text-verde-oscuro mb-0"><i class="bi bi-book me-2"></i>Libros Recientes</h4>
                <a href="/admin/libros" class="btn btn-sm btn-outline-success">Ver todos</a>
            </div>
        </div>
    </div>
    
    <div class="row g-4">
        <% if (librosRecientes && librosRecientes.length > 0) { %>
            <% librosRecientes.forEach(libro => { %>
                <div class="col-lg-3 col-md-6">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body p-0">
                            <div class="bg-verde-claro bg-opacity-10 p-3 text-center" style="height: 200px; display: flex; align-items: center; justify-content: center;">
                                <% if (libro.portada) { %>
                                    <img src="/uploads/libros/<%= libro.portada %>" alt="Portada de <%= libro.titulo %>" class="img-fluid" style="max-height: 180px; object-fit: contain;">
                                <% } else { %>
                                    <i class="bi bi-book text-verde-oscuro" style="font-size: 3rem;"></i>
                                <% } %>
                            </div>
                            <div class="p-3">
                                <h5 class="card-title fs-6 text-truncate mb-2" title="<%= libro.titulo %>"><%= libro.titulo %></h5>
                                <p class="card-text text-muted small mb-2 text-truncate" title="<%= libro.autor_nombre %>"><%= libro.autor_nombre %></p>
                                <div class="d-flex flex-column">
                                    <span class="badge bg-verde-claro text-verde-oscuro mb-2"><%= libro.categoria_nombre %></span>
                                    <small class="text-muted"><%= libro.stock %> disponibles</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <div class="col-12">
                <div class="alert alert-info bg-verde-claro text-verde-oscuro border-0">
                    <i class="bi bi-info-circle me-2"></i>No hay libros recientes para mostrar.
                </div>
            </div>
        <% } %>
    </div>
</div>