<div class="container-fluid px-4 py-4">
    <!-- Bienvenida con efecto de hoja -->
    <div class="card custom-card card-hoja mb-4 shadow-sm">
        <div class="card-body p-4">
            <div class="d-flex align-items-center">
                <div class="icon-circle bg-verde-claro me-3">
                    <i class="bi bi-tree text-verde-oscuro"></i>
                </div>
                <div>
                    <h2 class="fs-4 mb-1 text-verde-oscuro">¡Bienvenido a El Rincón Verde!</h2>
                    <p class="mb-0">Desde aquí podrás administrar todos los aspectos de la biblioteca.</p>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Estadísticas en tarjetas naturales -->
    <div class="row g-4 mb-4">
        <!-- Tarjeta de Libros -->
        <div class="col-md-6">
            <div class="custom-card card-rama h-100">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center mb-3">
                        <div class="icon-circle bg-verde-claro me-3">
                            <i class="bi bi-book text-verde-oscuro"></i>
                        </div>
                        <h6 class="card-title">Total de Libros</h6>
                    </div>
                    <p class="card-text display-6 mb-0"><%= totalLibros %></p>
                    <a href="/admin/libros" class="stretched-link text-decoration-none text-verde-medio small">
                        Ver catálogo <i class="bi bi-arrow-right-short"></i>
                    </a>
                </div>
            </div>
        </div>
        
        <!-- Tarjeta de Usuarios -->
        <div class="col-md-6">
            <div class="custom-card card-hoja h-100">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center mb-3">
                        <div class="icon-circle bg-verde-claro me-3">
                            <i class="bi bi-people text-verde-oscuro"></i>
                        </div>
                        <h6 class="card-title">Usuarios</h6>
                    </div>
                    <p class="card-text display-6 mb-0">120</p>
                    <a href="/admin/usuarios" class="stretched-link text-decoration-none text-verde-medio small">
                        Gestionar usuarios <i class="bi bi-arrow-right-short"></i>
                    </a>
                </div>
            </div>
        </div>
        

    </div>
    
    <!-- Acciones Rápidas -->
    <div class="row mb-4">
        <div class="col-12">
            <h4 class="main-title">Acciones Rápidas</h4>
        </div>
    </div>
    
    <div class="row mb-5">
        <div class="col-12">
            <div class="quick-actions-container p-4 bg-light rounded-3 shadow-sm">
                <div class="d-flex flex-wrap justify-content-center gap-4">
                    <!-- Acción: Gestión de Libros -->
                    <a href="/admin/libros" class="quick-action-btn">
                        <div class="icon-container bg-verde-medio">
                            <i class="bi bi-book"></i>
                        </div>
                        <span>Gestión de Libros</span>
                    </a>
                    
                    <!-- Acción: Gestión de Usuarios -->
                    <a href="/admin/usuarios" class="quick-action-btn">
                        <div class="icon-container bg-verde-oscuro">
                            <i class="bi bi-people"></i>
                        </div>
                        <span>Gestión de Usuarios</span>
                    </a>
                    
                    <!-- Acción: Reportes -->
                    <a href="/admin/reportes" class="quick-action-btn">
                        <div class="icon-container bg-ocre">
                            <i class="bi bi-bar-chart"></i>
                        </div>
                        <span>Reportes</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Libros Recientes -->
    <div class="row mb-4">
        <div class="col-12">
            <h4 class="main-title">Libros Recientes</h4>
        </div>
    </div>
    
    <div class="row g-4 mb-4">
        <% if (librosRecientes && librosRecientes.length > 0) { %>
            <% librosRecientes.forEach(libro => { %>
                <div class="col-lg-3 col-md-6">
                    <div class="custom-card h-100">
                        <div class="card-body p-0">
                            <div class="bg-verde-claro bg-opacity-10 p-3 text-center" style="height: 220px; display: flex; align-items: center; justify-content: center; overflow: hidden;">
                                <% if (libro.portada) { %>
                                    <img src="/uploads/libros/<%= libro.portada %>" alt="Portada de <%= libro.titulo %>" class="img-fluid" style="max-height: 200px; object-fit: contain;">
                                <% } else { %>
                                    <i class="bi bi-book text-verde-oscuro" style="font-size: 4rem;"></i>
                                <% } %>
                            </div>
                            <div class="p-4">
                                <h5 class="card-title fs-5 text-truncate-12 mb-2" title="<%= libro.titulo %>"><%= libro.titulo %></h5>
                                <p class="card-text text-verde-medio mb-3 text-truncate-12" title="<%= libro.autor_nombre %>"><%= libro.autor_nombre %></p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="badge bg-verde-claro text-verde-oscuro text-truncate-10" title="<%= libro.categoria_nombre %>"><%= libro.categoria_nombre %></span>
                                    <small class="text-verde-medio"><%= libro.stock %> disponibles</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <div class="col-12">
                <div class="alert alert-info bg-verde-claro text-verde-oscuro border-0">
                    <i class="bi bi-info-circle me-2"></i>No hay libros recientes para mostrar.
                </div>
            </div>
        <% } %>
    </div>
</div>