<!-- Contenido Principal del CRUD -->
<div class="container-fluid dashboard-container px-4 py-4">
    <!-- Nav Tabs estilo Carpeta con enlaces a la ruta centralizada -->
    <ul class="nav nav-tabs nav-tabs-custom" id="crudTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <a href="/admin/prestamos?tab=prestamos" class="nav-link <%= typeof activeTab === 'undefined' || activeTab === 'prestamos' ? 'active' : '' %>" id="prestamos-tab">
                <i class="bi bi-book me-2"></i>Préstamos
            </a>
        </li>
        <li class="nav-item" role="presentation">
            <a href="/admin/prestamos?tab=historial" class="nav-link <%= typeof activeTab !== 'undefined' && activeTab === 'historial' ? 'active' : '' %>" id="historial-tab">
                <i class="bi bi-clock-history me-2"></i>Historial
            </a>
        </li>
    </ul>

    <!-- Contenido de los Tabs -->
    <div class="tab-content" id="crudTabsContent">
        <!-- Tab de Préstamos -->
        <div class="tab-pane fade <%= typeof activeTab === 'undefined' || activeTab === 'prestamos' ? 'show active' : '' %>" 
             id="prestamos" 
             role="tabpanel" 
             aria-labelledby="prestamos-tab">
            <%- include('./prestamos/tabla') %>
        </div>
        <!-- Tab de Historial -->
        <div class="tab-pane fade <%= typeof activeTab !== 'undefined' && activeTab === 'historial' ? 'show active' : '' %>" 
             id="historial" 
             role="tabpanel" 
             aria-labelledby="historial-tab">
            <%- include('./historial/tabla') %>
        </div>
    </div>
</div>

<script src="/js/tab-manager.js"></script>
