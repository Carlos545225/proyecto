<!-- Contenido Principal -->
<div class="container-fluid dashboard-container px-4 py-4">
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                    <h5 class="card-title text-verde-oscuro mb-0"><i class="bi bi-eye-fill me-2"></i>Detalles del Préstamo</h5>
                    <a href="/admin/prestamos" class="btn btn-outline-secondary btn-sm"><i class="bi bi-arrow-left me-1"></i>Volver</a>
                </div>
                <div class="card-body p-4">
                    <div class="row">
                        <!-- Información del Préstamo -->
                        <div class="col-md-6">
                            <div class="card bg-light-custom border-0 mb-4">
                                <div class="card-body">
                                    <h6 class="card-subtitle mb-3 text-verde-oscuro">Información del Préstamo</h6>
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">ID del Préstamo:</label>
                                        <p><%= prestamo.id %></p>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Estado:</label>
                                        <p>
                                            <% if (prestamo.fecha_devolucion_real) { %>
                                                <span class="badge bg-success">Devuelto</span>
                                            <% } else { %>
                                                <span class="badge bg-warning text-dark">Prestado</span>
                                            <% } %>
                                        </p>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Fecha de Préstamo:</label>
                                        <p><%= new Date(prestamo.fecha_prestamo).toLocaleDateString() %></p>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Fecha de Devolución Esperada:</label>
                                        <p><%= new Date(prestamo.fecha_devolucion_esperada).toLocaleDateString() %></p>
                                    </div>
                                    <% if (prestamo.fecha_devolucion_real) { %>
                                        <div class="mb-3">
                                            <label class="form-label fw-bold">Fecha de Devolución Real:</label>
                                            <p><%= new Date(prestamo.fecha_devolucion_real).toLocaleDateString() %></p>
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                        </div>

                        <!-- Información del Lector -->
                        <div class="col-md-6">
                            <div class="card bg-light-custom border-0 mb-4">
                                <div class="card-body">
                                    <h6 class="card-subtitle mb-3 text-verde-oscuro">Información del Lector</h6>
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Nombre Completo:</label>
                                        <p><%= prestamo.lector_nombre %></p>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Documento:</label>
                                        <p><%= prestamo.lector_documento %></p>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Email:</label>
                                        <p><%= prestamo.lector_email %></p>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Teléfono:</label>
                                        <p><%= prestamo.lector_telefono || 'No registrado' %></p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Información del Libro -->
                        <div class="col-md-6">
                            <div class="card bg-light-custom border-0 mb-4">
                                <div class="card-body">
                                    <h6 class="card-subtitle mb-3 text-verde-oscuro">Información del Libro</h6>
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Título:</label>
                                        <p><%= prestamo.libro_titulo %></p>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">ISBN:</label>
                                        <p><%= prestamo.libro_isbn %></p>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Autor:</label>
                                        <p><%= prestamo.libro_autor %></p>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Editorial:</label>
                                        <p><%= prestamo.libro_editorial %></p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Información Adicional -->
                        <div class="col-md-6">
                            <div class="card bg-light-custom border-0 mb-4">
                                <div class="card-body">
                                    <h6 class="card-subtitle mb-3 text-verde-oscuro">Información Adicional</h6>
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Observaciones:</label>
                                        <p><%= prestamo.observaciones || 'Sin observaciones' %></p>
                                    </div>
                                    <% if (prestamo.fecha_devolucion_real) { %>
                                        <div class="mb-3">
                                            <label class="form-label fw-bold">Estado del Libro al Devolver:</label>
                                            <p>
                                                <% 
                                                    const estados = {
                                                        'bueno': 'Bueno',
                                                        'regular': 'Regular',
                                                        'malo': 'Malo',
                                                        'perdido': 'Perdido'
                                                    };
                                                %>
                                                <%= estados[prestamo.estado_libro] || 'No especificado' %>
                                            </p>
                                        </div>
                                        <% if (prestamo.multa > 0) { %>
                                            <div class="mb-3">
                                                <label class="form-label fw-bold">Multa Aplicada:</label>
                                                <p>$<%= prestamo.multa.toFixed(2) %></p>
                                            </div>
                                        <% } %>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 