<!-- Contenido Principal -->
<div class="container-fluid dashboard-container px-4 py-4">
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                    <h5 class="card-title text-verde-oscuro mb-0"><i class="bi bi-person-badge me-2"></i>Detalles del Administrador</h5>
                    <div>
                        <a href="/admin/usuarios/administrador/editar/<%= administrador.id %>" class="btn btn-verde btn-sm me-2"><i class="bi bi-pencil-square me-1"></i>Editar</a>
                        <a href="/admin/usuarios?tab=administradores" class="btn btn-secondary">Volver</a>
                    </div>
                </div>
                <div class="card-body p-4">
                    <div class="row">
                        <!-- Columna de la foto de perfil -->
                        <div class="col-md-3 mb-4 mb-md-0">
                            <div class="text-center">
                                <div class="profile-image-container mb-3">
                                    <% if (administrador.foto_perfil && administrador.foto_perfil !== 'default.png') { %>
                                        <img src="/uploads/usuarios/<%= administrador.foto_perfil %>" alt="Foto de <%= administrador.nombre %>" class="img-fluid rounded-circle shadow-sm" style="max-height: 300px;">
                                    <% } else { %>
                                        <img src="/imagenes/usuarios/default.jpg" alt="Foto no disponible" class="img-fluid rounded-circle shadow-sm" style="max-height: 300px;">
                                    <% } %>
                                </div>
                                <% if (administrador.foto_perfil && administrador.foto_perfil !== 'default.png') { %>
                                    <div class="d-grid gap-2">
                                        <a href="/uploads/usuarios/<%= administrador.foto_perfil %>" download class="btn btn-verde btn-sm"><i class="bi bi-download me-1"></i>Descargar Foto</a>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                        
                        <!-- Columna de detalles -->
                        <div class="col-md-9">
                            <div class="row">
                                <div class="col-12 mb-4">
                                    <h4 class="text-verde-oscuro"><%= administrador.nombre %> <%= administrador.apellidos %></h4>
                                    <div class="d-flex flex-wrap align-items-center mb-2">
                                        <span class="badge bg-verde-medio me-2 mb-1">Administrador</span>
                                        <span class="badge bg-<%= administrador.estado ? 'verde-claro' : 'danger' %> me-2 mb-1">
                                            <%= administrador.estado ? 'Activo' : 'Inactivo' %>
                                        </span>
                                    </div>
                                </div>
                                
                                <!-- Información básica -->
                                <div class="col-md-6 mb-3">
                                    <div class="detail-item">
                                        <span class="detail-label">Email:</span>
                                        <span class="detail-value text-verde-oscuro"><%= administrador.email %></span>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="detail-item">
                                        <span class="detail-label">Documento:</span>
                                        <span class="detail-value text-verde-oscuro"><%= administrador.tipo_documento %> <%= administrador.numero_documento %></span>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="detail-item">
                                        <span class="detail-label">Teléfono:</span>
                                        <span class="detail-value text-verde-oscuro"><%= administrador.telefono || 'No especificado' %></span>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="detail-item">
                                        <span class="detail-label">Dirección:</span>
                                        <span class="detail-value text-verde-oscuro"><%= administrador.direccion || 'No especificada' %></span>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="detail-item">
                                        <span class="detail-label">Fecha de Nacimiento:</span>
                                        <span class="detail-value text-verde-oscuro"><%= administrador.fecha_nacimiento ? new Date(administrador.fecha_nacimiento).toLocaleDateString() : 'No especificada' %></span>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="detail-item">
                                        <span class="detail-label">Fecha de Registro:</span>
                                        <span class="detail-value text-verde-oscuro"><%= new Date(administrador.fecha_registro).toLocaleDateString() %></span>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="detail-item">
                                        <span class="detail-label">Último Acceso:</span>
                                        <span class="detail-value text-verde-oscuro"><%= administrador.ultima_sesion ? new Date(administrador.ultima_sesion).toLocaleDateString() : 'No registrado' %></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Estilos adicionales para la vista de detalles */
    .detail-item {
        margin-bottom: 0.5rem;
    }
    .detail-label {
        font-weight: 600;
        color: var(--verde-oscuro);
        margin-right: 0.5rem;
    }
    .detail-value {
        color: var(--verde-oscuro);
    }
    .profile-image-container {
        background-color: var(--verde-claro);
        padding: 1rem;
        border-radius: 0.5rem;
    }
</style>
