<!-- Contenido Principal -->
<div class="container-fluid dashboard-container px-4 py-4">
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                    <h5 class="card-title text-verde-oscuro mb-0"><i class="bi bi-person-circle me-2"></i>Detalles del Lector</h5>
                    <div>
                        <a href="/admin/usuarios/lector/editar/<%= lector.id %>" class="btn btn-verde me-2">
                            <i class="bi bi-pencil-square me-2"></i>Editar
                        </a>
                        <a href="/admin/usuarios?tab=lectores" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Volver
                        </a>
                    </div>
                </div>
                <div class="card-body p-4">
                    <div class="row">
                        <!-- Foto de Perfil -->
                        <div class="col-md-4 text-center mb-4">
                            <div class="profile-image-container mb-3">
                                <img src="/uploads/usuarios/<%= lector.foto_perfil || 'default.png' %>" 
                                     alt="Foto de perfil" 
                                     class="img-fluid rounded-circle"
                                     style="width: 200px; height: 200px; object-fit: cover;">
                            </div>
                            <h4 class="text-verde-oscuro"><%= lector.nombre %> <%= lector.apellidos %></h4>
                            <span class="badge bg-<%= lector.estado ? 'success' : 'danger' %>">
                                <%= lector.estado ? 'Activo' : 'Inactivo' %>
                            </span>
                        </div>

                        <!-- Información Personal -->
                        <div class="col-md-8">
                            <div class="row">
                                <div class="col-12 mb-4">
                                    <h6 class="text-verde-oscuro border-bottom pb-2">Información Personal</h6>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold">Nombre:</label>
                                    <p><%= lector.nombre %></p>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold">Apellidos:</label>
                                    <p><%= lector.apellidos %></p>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold">Tipo de Documento:</label>
                                    <p><%= lector.tipo_documento %></p>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold">Número de Documento:</label>
                                    <p><%= lector.numero_documento %></p>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold">Fecha de Nacimiento:</label>
                                    <p><%= lector.fecha_nacimiento ? new Date(lector.fecha_nacimiento).toLocaleDateString() : 'No especificada' %></p>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold">Teléfono:</label>
                                    <p><%= lector.telefono || 'No especificado' %></p>
                                </div>

                                <div class="col-12 mb-4">
                                    <h6 class="text-verde-oscuro border-bottom pb-2">Información de Contacto</h6>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold">Email:</label>
                                    <p><%= lector.email %></p>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold">Dirección:</label>
                                    <p><%= lector.direccion || 'No especificada' %></p>
                                </div>

                                <div class="col-12 mb-4">
                                    <h6 class="text-verde-oscuro border-bottom pb-2">Información de Cuenta</h6>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold">Fecha de Registro:</label>
                                    <p><%= new Date(lector.fecha_registro).toLocaleDateString() %></p>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold">Estado:</label>
                                    <p>
                                        <span class="badge bg-<%= lector.estado ? 'success' : 'danger' %>">
                                            <%= lector.estado ? 'Activo' : 'Inactivo' %>
                                        </span>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
