<!-- Contenido Principal -->
<div class="container-fluid dashboard-container px-4 py-4">
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                    <h5 class="card-title text-verde-oscuro mb-0"><i class="bi bi-person-badge me-2"></i>Detalles del Bibliotecario</h5>
                    <div>
                        <a href="/admin/usuarios/bibliotecario/editar/<%= bibliotecario.id %>" class="btn btn-verde btn-sm me-2"><i class="bi bi-pencil-square me-1"></i>Editar</a>
                        <a href="/admin/usuarios?tab=bibliotecarios" class="btn btn-secondary">Volver</a>
                    </div>
                </div>
                <div class="card-body p-4">
                    <div class="row">
                        <!-- Columna de la foto de perfil -->
                        <div class="col-md-3 mb-4 mb-md-0">
                            <div class="text-center">
                                <div class="profile-image-container mb-3">
                                    <img src="/uploads/usuarios/<%= bibliotecario.foto_perfil %>" alt="Foto de perfil" class="img-fluid rounded-circle shadow-sm" style="max-height: 300px;">
                                </div>
                            </div>
                        </div>
                        
                        <!-- Columna de detalles -->
                        <div class="col-md-9">
                            <div class="row">
                                <div class="col-12 mb-4">
                                    <h4 class="text-verde-oscuro"><%= bibliotecario.nombre %> <%= bibliotecario.apellidos %></h4>
                                    <div class="d-flex flex-wrap align-items-center mb-2">
                                        <span class="badge bg-verde-medio me-2 mb-1">Bibliotecario</span>
                                        <span class="badge <%= bibliotecario.estado ? 'bg-verde-claro' : 'bg-danger' %> me-2 mb-1">
                                            <%= bibliotecario.estado ? 'Activo' : 'Inactivo' %>
                                        </span>
                                        <span class="badge bg-info me-2 mb-1">Turno: <%= bibliotecario.turno.charAt(0).toUpperCase() + bibliotecario.turno.slice(1) %></span>
                                    </div>
                                </div>
                                
                                <!-- Información básica -->
                                <div class="col-md-6 mb-3">
                                    <div class="detail-item">
                                        <span class="detail-label">Email:</span>
                                        <span class="detail-value text-verde-oscuro"><%= bibliotecario.email %></span>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="detail-item">
                                        <span class="detail-label">Teléfono:</span>
                                        <span class="detail-value text-verde-oscuro"><%= bibliotecario.telefono || 'No especificado' %></span>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="detail-item">
                                        <span class="detail-label">Tipo de Documento:</span>
                                        <span class="detail-value text-verde-oscuro"><%= bibliotecario.tipo_documento %></span>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="detail-item">
                                        <span class="detail-label">Número de Documento:</span>
                                        <span class="detail-value text-verde-oscuro"><%= bibliotecario.numero_documento %></span>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="detail-item">
                                        <span class="detail-label">Fecha de Nacimiento:</span>
                                        <span class="detail-value text-verde-oscuro"><%= bibliotecario.fecha_nacimiento ? new Date(bibliotecario.fecha_nacimiento).toLocaleDateString() : 'No especificada' %></span>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="detail-item">
                                        <span class="detail-label">Fecha de Contratación:</span>
                                        <span class="detail-value text-verde-oscuro"><%= new Date(bibliotecario.fecha_contratacion).toLocaleDateString() %></span>
                                    </div>
                                </div>
                                <div class="col-12 mb-3">
                                    <div class="detail-item">
                                        <span class="detail-label">Dirección:</span>
                                        <span class="detail-value text-verde-oscuro"><%= bibliotecario.direccion || 'No especificada' %></span>
                                    </div>
                                </div>
                                
                                <!-- Información adicional -->
                                <div class="col-md-6 mb-3">
                                    <div class="detail-item">
                                        <span class="detail-label">Fecha de Registro:</span>
                                        <span class="detail-value text-verde-oscuro"><%= new Date(bibliotecario.fecha_registro).toLocaleDateString() %></span>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="detail-item">
                                        <span class="detail-label">Última Actualización:</span>
                                        <span class="detail-value text-verde-oscuro"><%= new Date(bibliotecario.ultima_actualizacion).toLocaleDateString() %></span>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="detail-item">
                                        <span class="detail-label">Última Sesión:</span>
                                        <span class="detail-value text-verde-oscuro"><%= bibliotecario.ultima_sesion ? new Date(bibliotecario.ultima_sesion).toLocaleDateString() : 'Nunca' %></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Estilos adicionales para la vista de detalles */
    .detail-item {
        margin-bottom: 0.5rem;
    }
    .detail-label {
        font-weight: 600;
        color: var(--verde-oscuro);
        margin-right: 0.5rem;
    }
    .detail-value {
        color: var(--verde-oscuro);
    }
    .profile-image-container {
        background-color: var(--verde-claro);
        padding: 1rem;
        border-radius: 0.5rem;
    }
</style>
