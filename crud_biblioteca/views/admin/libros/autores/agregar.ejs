<!-- Contenido Principal -->
<div class="container-fluid dashboard-container px-4 py-4">
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                    <h5 class="card-title text-verde-oscuro mb-0"><i class="bi bi-person-plus-fill me-2"></i>Agregar Nuevo Autor</h5>
                    <a href="/admin/libros?tab=autores" class="btn btn-outline-secondary btn-sm"><i class="bi bi-arrow-left me-1"></i>Volver</a>
                </div>
                <div class="card-body p-4">
                    <% if (typeof error !== 'undefined' && error.length > 0) { %>
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <%= error %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    <% } %>
                    <form id="form-agregar-autor" action="/admin/libros/autor/agregar" method="POST" class="needs-validation" novalidate>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label for="nombre_completo" class="form-label">Nombre Completo<span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="nombre_completo" name="nombre_completo" required
                                       value="<%= autor && autor.nombre_completo ? autor.nombre_completo : '' %>">
                                <div class="invalid-feedback">
                                    Por favor ingrese el nombre completo del autor.
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label for="nacionalidad" class="form-label">Nacionalidad<span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="nacionalidad" name="nacionalidad" required
                                       value="<%= autor && autor.nacionalidad ? autor.nacionalidad : '' %>">
                                <div class="invalid-feedback">
                                    Por favor ingrese la nacionalidad del autor.
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label for="fecha_nacimiento" class="form-label">Fecha de Nacimiento<span class="text-danger">*</span></label>
                                <input type="date" class="form-control" id="fecha_nacimiento" name="fecha_nacimiento" required
                                       value="<%= autor && autor.fecha_nacimiento ? new Date(autor.fecha_nacimiento).toISOString().split('T')[0] : '' %>">
                                <div class="invalid-feedback">
                                    Por favor ingrese la fecha de nacimiento.
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label for="fecha_fallecimiento" class="form-label">Fecha de Fallecimiento</label>
                                <input type="date" class="form-control" id="fecha_fallecimiento" name="fecha_fallecimiento"
                                       value="<%= autor && autor.fecha_fallecimiento ? new Date(autor.fecha_fallecimiento).toISOString().split('T')[0] : '' %>">
                                <small class="text-muted">Dejar en blanco si el autor sigue vivo</small>
                            </div>
                            <div class="col-12">
                                <label for="biografia" class="form-label">Biografía</label>
                                <textarea class="form-control" id="biografia" name="biografia" rows="4"><%= autor && autor.biografia ? autor.biografia : '' %></textarea>
                            </div>
                            <div class="col-12 mt-4">
                                <button type="submit" class="btn btn-leaf"><i class="bi bi-save me-2"></i>Guardar Autor</button>
                                <a href="/admin/libros?tab=autores" class="btn btn-outline-secondary ms-2"><i class="bi bi-x-circle me-2"></i>Cancelar</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Validación del formulario
    (function() {
        'use strict';
        var forms = document.querySelectorAll('.needs-validation');
        Array.prototype.slice.call(forms).forEach(function(form) {
            form.addEventListener('submit', function(event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        });
    })();
</script>
